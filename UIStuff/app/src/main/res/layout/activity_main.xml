<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"
    tools:context="com.example.zemoso.uistuff.MainActivity">

    <TextView
        android:layout_marginTop="@dimen/top_margin_left"
        android:id="@+id/textviewheader"
        android:textColor="@color/jetBlack"
        android:layout_width="@dimen/toplefttextboxwidth"
        android:layout_height="@dimen/toplefttextboxheight"
        android:background="@drawable/textviewroundedcorner"
        android:layout_alignParentStart="true"
        android:text="@string/who_tracking_us"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/searchTextView"
        android:layout_marginTop="@dimen/top_margin_right"
        android:layout_width="@dimen/toprighttextboxwidth"
        android:layout_height="@dimen/toprighttextboxheight"
        android:background="@drawable/textviewroundedcornerright"
        android:layout_alignParentEnd="true"
        android:drawableRight="@drawable/ic_search_black_24dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/textviewheader"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingTop="24dp"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:id="@+id/recycler_view"/>


</RelativeLayout>
